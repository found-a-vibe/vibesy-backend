# Server Configuration
SERVER_PORT=3000
NODE_ENV=development
APP_URL=http://localhost:3000

# Stripe Configuration
# Get these from your Stripe Dashboard: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_1234567890abcdef1234567890abcdef12345678
STRIPE_PUBLISHABLE_KEY=pk_test_1234567890abcdef1234567890abcdef12345678
# Get webhook secret from Stripe CLI or Dashboard webhook endpoint
STRIPE_WEBHOOK_SECRET=whsec_1234567890abcdef1234567890abcdef1234567890abcdef

# Return URLs for Connect onboarding (must be valid HTTP/HTTPS URLs)
# These should point to your actual domain in production
RETURN_URL=http://localhost:3000/connect/return
REFRESH_URL=http://localhost:3000/connect/refresh

# Database Configuration (PostgreSQL)
# Full connection string format
DATABASE_URL=postgresql://username:password@localhost:5432/database_name
# Individual connection parameters
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=vibesy_development
PG_USER=your_db_username
PG_PASSWORD=your_secure_db_password

# Firebase Configuration
# Download service account JSON from Firebase Console
FIREBASE_SERVICE_ACCOUNT_PATH=./path/to/service-account-key.json
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_DATABASE_URL=https://your-project-default-rtdb.firebaseio.com

# SendGrid Configuration (for email notifications)
# Get API key from SendGrid Dashboard
SENDGRID_API_KEY=SG.1234567890abcdef.1234567890abcdef1234567890abcdef1234567890abcdef
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=Your App Name

# Platform Fee Configuration (in basis points, e.g., 300 = 3%)
PLATFORM_FEE_BASIS_POINTS=300

# JWT Configuration (for API authentication)
JWT_SECRET=your-super-secure-jwt-secret-key-make-it-long-and-random
JWT_EXPIRES_IN=24h

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=backend.log

# Redis Configuration (if using Redis for caching/sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# Security
# Generate a random string for session secrets
SESSION_SECRET=your-super-secure-session-secret-change-this-in-production

# API Configuration
API_VERSION=v1
API_BASE_PATH=/api/v1
