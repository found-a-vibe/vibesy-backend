# ====================
# SERVER CONFIGURATION
# ====================

# Server port number (default: 4242)
SERVER_PORT=4242

# Node environment: development | production | test
NODE_ENV=development

# Log level: trace | debug | info | warn | error | fatal
# Default: debug (development), info (production)
LOG_LEVEL=info

# ====================
# DATABASE (PostgreSQL)
# ====================

# PostgreSQL connection details
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=vibesy
PG_USER=postgres
PG_PASSWORD=your_postgres_password

# Alternative: Use DATABASE_URL instead of individual PG_* variables
# DATABASE_URL=postgresql://user:password@host:port/database

# ====================
# REDIS (OTP Storage)
# ====================

# Redis connection URL
REDIS_URL=redis://localhost:6379

# ====================
# STRIPE INTEGRATION
# ====================

# Stripe API keys (get from https://dashboard.stripe.com/apikeys)
# Use test keys (sk_test_*, pk_test_*) for development
# Use live keys (sk_live_*, pk_live_*) for production
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key

# Stripe webhook secret (get from https://dashboard.stripe.com/webhooks)
# Format: whsec_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Platform fee in basis points (300 = 3%)
# Range: 0-10000 (0% - 100%)
PLATFORM_FEE_BASIS_POINTS=300

# ====================
# FIREBASE
# ====================

# Path to Firebase service account JSON file
# Download from Firebase Console > Project Settings > Service Accounts
GOOGLE_APPLICATION_CREDENTIALS=/path/to/firebase-service-account.json

# Firebase Storage bucket (optional, for file uploads)
# Format: your-project-id.appspot.com
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# ====================
# SENDGRID (Email)
# ====================

# SendGrid API key (get from https://app.sendgrid.com/settings/api_keys)
SENDGRID_API_KEY=SG.your_sendgrid_api_key

# Sender email address (must be verified in SendGrid)
FROM_EMAIL=noreply@yourdomain.com
# Alternative variable name:
# SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# Sender name (optional, appears in email "From" field)
SENDGRID_FROM_NAME=Vibesy

# ====================
# APPLICATION URLS
# ====================

# Backend API URL
# Development: http://localhost:4242
# Production: https://your-api-domain.com
APP_URL=http://localhost:4242

# Stripe Connect return URL (after successful onboarding)
# iOS app: vibesy://connect/return
# Web: https://your-frontend.com/connect/return
RETURN_URL_SCHEME=vibesy://connect/return

# Stripe Connect refresh URL (if onboarding needs to be restarted)
# iOS app: vibesy://connect/refresh
# Web: https://your-frontend.com/connect/refresh
REFRESH_URL=vibesy://connect/refresh

# ====================
# BACKGROUND JOBS
# ====================

# Enable/disable event sync job (default: true)
ENABLE_EVENT_SYNC=true

# ====================
# PRODUCTION SECURITY
# ====================

# In production, ensure:
# - NODE_ENV=production
# - APP_URL uses https:// (not localhost)
# - STRIPE_SECRET_KEY uses sk_live_* (not sk_test_*)
# - All secrets are rotated and unique
# - SENDGRID_FROM_EMAIL is verified
# - FIREBASE_STORAGE_BUCKET is configured
